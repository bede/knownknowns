
conda.enabled = true

// Process configuration
process {
    // Default resources
    cpus = 2
    memory = '4.GB'
    time = '10.h'

    // Process-specific configurations
    withName: sketch_references {
        cpus = 1
        memory = '2.GB'
    }

    withName: sketch_reads {
        cpus = 1
        memory = { 4.GB * Math.pow(2, task.attempt - 1) }
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withName: filter_abundance {
        cpus = 1
        memory = { 4.GB * Math.pow(2, task.attempt - 1) }
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withName: calculate_containment {
        cpus = 2
        memory = '16.GB'
    }

    withName: plot {
        cpus = 1
        memory = '2.GB'
    }
}

// Profile configurations
profiles {
    standard {
        process.executor = 'local'
    }

    docker {
        docker.enabled = true
        conda.enabled = false

        process {
            container = 'community.wave.seqera.io/library/sourmash_altair_pandas_sourmash_plugin_branchwater_vl-convert-python:0d8dc409a35d6fc2'
        }
    }
}

trace {
    overwrite = true
    file = 'pipeline_trace.txt'
    fields = 'task_id,name,status,exit,realtime,%cpu,rss'
}
