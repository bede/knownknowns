
conda.enabled = true

// Process configuration
process {
    // Default resources
    cpus = 2
    memory = '4.GB'
    time = '10.h'

    // Process-specific configurations
    withName: sketch_references {
        cpus = 1
        memory = '2.GB'
    }

    withName: sketch_reads {
        cpus = 1
        memory = '2.GB'
    }

    withName: calculate_containment {
        cpus = 2
        memory = '4.GB'
    }

    withName: create_visualization {
        cpus = 1
        memory = '2.GB'
    }
}

// Profile configurations
profiles {
    standard {
        process.executor = 'local'
    }

    docker {
        docker.enabled = true
        conda.enabled = false

        process {
            withName: 'sketch_references|sketch_reads|calculate_containment' {
                container = 'quay.io/biocontainers/sourmash:4.9.0--hdfd78af_0'
            }

            withName: create_visualization {
                container = 'condaforge/mambaforge:latest'
                containerOptions = '--entrypoint=""'
            }
        }
    }
}

trace {
    overwrite = true
    file = 'pipeline_trace.txt'
    fields = 'task_id,name,status,exit,realtime,%cpu,rss'
}
